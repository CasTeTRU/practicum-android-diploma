<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">@dimen/corner_radius</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontWeight">@dimen/font_weight_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="RegularTextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchField">
        <item name="android:background">@drawable/bg_search_field</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">55</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="SearchIconButton">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_margin">@dimen/padding_medium</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/icon_size_medium</item>
        <item name="android:layout_height">@dimen/icon_size_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="SearchInfo">
        <item name="android:background">@drawable/bg_search_info</item>
        <item name="android:paddingVertical">@dimen/padding_small</item>
        <item name="android:paddingHorizontal">@dimen/padding_small</item>
        <item name="android:layout_marginTop">@dimen/corner_radius</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ErrorPlaceholder">
        <item name="android:textAppearance">@style/MediumTextLarge</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_medium</item>
        <item name="android:drawablePadding">@dimen/padding_medium</item>
    </style>

    <style name ="RegularTextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">@dimen/font_weight_regular</item>
    </style>

    <style name="MediumTextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/hintTextColor</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="MediumTextLarge.22">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="BoldTextExtraLarge">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name='android:fontFamily'>@font/ys_display_bold</item>
        <item name="fontWeight">@dimen/font_weight_bold</item>

    </style>
</resources>

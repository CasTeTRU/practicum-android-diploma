<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium"
    android:background="?attr/android:colorBackground">

    <ImageView
        android:id="@+id/ivCompanyLogo"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:contentDescription="@string/company_logo"
        android:scaleType="centerInside"
        android:src="@drawable/ic_companylogo_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvVacancyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginEnd="@dimen/padding_medium"
        android:textSize="@dimen/text_size_large"
        android:textColor="?attr/colorOnBackground"
        android:fontFamily="@font/ys_display_medium"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivCompanyLogo"
        app:layout_constraintTop_toTopOf="@id/ivCompanyLogo"
        tools:text="Длинное название вакансии, город федерального значения Москва" />

    <TextView
        android:id="@+id/tvCompanyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginTop="@dimen/padding_small"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintEnd_toEndOf="@+id/tvVacancyName"
        app:layout_constraintStart_toEndOf="@+id/ivCompanyLogo"
        app:layout_constraintTop_toBottomOf="@id/tvVacancyName"
        tools:text="Название компании" />

    <TextView
        android:id="@+id/tvSalary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_medium"
        android:layout_marginTop="@dimen/padding_small"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="?attr/colorOnBackground"
        android:textSize="@dimen/text_size_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvVacancyName"
        app:layout_constraintStart_toEndOf="@+id/ivCompanyLogo"
        app:layout_constraintTop_toBottomOf="@id/tvCompanyName"
        tools:text="от 100 000 руб." />

</androidx.constraintlayout.widget.ConstraintLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/padding_medium"
    android:paddingVertical="@dimen/padding_small">

    <ImageView
        android:id="@+id/img_company"
        android:layout_width="@dimen/icon_size_large"
        android:layout_height="@dimen/icon_size_large"
        android:clipToOutline="false"
        android:contentDescription="@string/company_logo"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_company_logo_placeholder" />

    <TextView
        android:id="@+id/tv_name_vacancy"
        style="@style/MediumTextLarge.22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/corner_radius"
        android:textColor="?attr/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_company"
        app:layout_constraintTop_toTopOf="@+id/img_company"
        tools:text="Android-разработчик, \nМосква" />

    <TextView
        android:id="@+id/tv_name_company"
        style="@style/RegularTextMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_vacancy"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_vacancy"
        tools:text="Еда" />

    <TextView
        android:id="@+id/tv_salary"
        style="@style/RegularTextMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_name_company"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_company"
        tools:text="от 100 000 ₽" />

</androidx.constraintlayout.widget.ConstraintLayout>
